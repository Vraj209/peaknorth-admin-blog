# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=3001
API_VERSION=v1
API_PREFIX=/api

# =================================
# DATABASE CONFIGURATION
# =================================
# Firebase Configuration
FIREBASE_PROJECT_ID=peaknorth-blog
FIREBASE_DATABASE_URL=https://peaknorth-blog-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=peaknorth-blog.appspot.com

# For production, use service account key JSON as string:
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"peaknorth-blog","private_key_id":"..."}
# Leave empty for development (uses gcloud auth application-default login)

# =================================
# SECURITY CONFIGURATION
# =================================
# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Keys
N8N_API_KEY=your-secure-random-api-key-for-n8n-workflows

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# EXTERNAL SERVICES
# =================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
EMAIL_FROM=noreply@peaknorth.com

# =================================
# APPLICATION URLS
# =================================
FRONTEND_URL=http://localhost:5173
ADMIN_DASHBOARD_URL=http://localhost:5173
PUBLIC_BLOG_URL=https://peaknorth.com

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=logs/app.log

# =================================
# FEATURE FLAGS
# =================================
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_CORS=true

# =================================
# MONITORING & ANALYTICS
# =================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =================================
# DEVELOPMENT CONFIGURATION
# =================================
DEBUG=peaknorth:*
MOCK_EXTERNAL_SERVICES=false
